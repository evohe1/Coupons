@model UserViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
    <div class="col-sm-3">
        <img style="width:100%; height:100%" src="@Model.Picture" />
    </div>
    <div class="col-sm-9">

        <table class="table table-bordered table-striped">
            <tr>
                <th>Kullanıcı ismi</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-posta</th>
                <td>@Model.Email</td>
            </tr>

            
            <tr>
                <th>City</th>
                <td>
                    @if (!String.IsNullOrEmpty(Model.City))
                    {
                        @Model.City
                    }
                    else

                    {
                        <span>Belirtilmemiş</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Doğum tarihi</th>
                <td>

                    @if (Model.BirthDate != null)
                    {
                        @Model.BirthDate?.ToShortDateString()
                    }
                    else

                    {
                        <span>Belirtilmemiş</span>
                    }
                </td>
            </tr>

            <tr>
                <th>Cinsiyet</th>
                <td>@Model.Gender</td>
            </tr>

        </table>

        
            <a class="btn btn-info btn-block" asp-action="PasswordChange" asp-controller="User">Şifre değiştirme</a>

                <a class="btn btn-info btn-block" asp-action="UserEdit" asp-controller="User">Bilgi güncelleme</a>
    </div>
</div>