<body>
    <header>
        <div id="containerHeader">
            <div class="container">
                <div class="twoList">
                    <div class="logo">
                        <a href="/"><img src="~/images/logo3.png" width="250" /></a>
                    </div>
                    <div class="hamburger-btn">
                        <div class="bar1"></div>
                        <div class="bar2"></div>
                        <div class="bar3"></div>
                    </div>
                    <div class="headerLogin">
                        <div class="item">
                            <div class="searchIcon">
                                <i class="material-icons">search</i>
                            </div>
                            <input class="search-bar" placeholder="Ara" type="text">
                        </div>
                        @{
                            if (signInManager.IsSignedIn(User))
                            {

                                <a href="/User/Info">
                                    <img style="border-radius:50%; margin: 0px 10px;" height="40" width="40" src="@userManager.GetUserAsync(User).Result.Picture">
                                </a>

                                <div class="item">
                                    <a class="membership-register-link" asp-action="Logout" asp-controller="User" asp-route-returnUrl="/Product/List">Çıkış</a>
                                </div>
                            }
                            else
                            {
                                <div class="item">
                                    <a class="membership-login-link" href="/User/Login">Giriş</a>
                                </div>
                                <div class="item">
                                    <a class="membership-register-link" href="/uye-ol">Kayıt Ol</a>
                                </div>
                            }
                        }

                    </div>
                </div>
            </div>
        </div>
        <div id="menu-list">
            <div class="container">
                @if (signInManager.IsSignedIn(User))
                {
                    <div class="menu">
                        <ul>
                            <li><a href="#">Profilim</a></li>
                            <li><a href="#">Eklediğim Kampanyalar</a></li>
                            <li><a href="#">Yorumlarım</a></li>
                        </ul>
                    </div>
                }
