@using Microsoft.AspNetCore.Identity
@using SiteDeals.MVCWebUI.Areas.Identity.Data
@using System.Security.Claims
@inject SignInManager<SiteDealsMVCWebUIUser> signInManager;
@inject UserManager<SiteDealsMVCWebUIUser> userManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SiteDeals.MVCWebUI</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/project.css">
    <link rel="stylesheet" media="only screen and (max-width:1500px)" href="~/css/project-media1366.css" type="text/css" media="screen" />
    <link rel="stylesheet" media="only screen and (max-width:1200px)" href="~/css/project-media1024.css" type="text/css" media="screen" />
