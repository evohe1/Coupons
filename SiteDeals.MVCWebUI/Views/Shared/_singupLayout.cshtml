<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/project.css">
    <link rel="stylesheet" media="only screen and (max-width:1500px)" href="~/css/project-media1366.css"  type="text/css" media="screen" />
    <link rel="stylesheet" media="only screen and (max-width:1200px)" href="~/css/project-media1024.css"  type="text/css" media="screen" />
    <link rel="stylesheet" media="only screen and (max-width:1023px)" href="~/css/project-media800.css" type="text/css" media="screen" />
    <link rel="stylesheet" media="only screen and (max-width:640px)" href="~/css/project-media640.css" type="text/css" media="screen" />
    <link rel="stylesheet" media="only screen and (max-width:550px)" href="~/css/project-media480.css" type="text/css" media="screen" />
    <link rel="stylesheet" media="only screen and (max-width:445px)" href="~/css/project-media375.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/flexslider/flexslider.css">

</head>
<body>
        <div id="sign-up">
        <div class="sign-in-container">
            <div class="sign-in-item">
                <div class="text-container">
                    <span class="title">Kampanyan</span>
                    <p>Sevilen markaların en uygun fiyatlarla, gerçek kişiler tarafından paylaşıldığı kampanya topluluğuna hoşgeldin.</p>
                    <img src="~/images/common/register.png" alt="" class="login-bg">
                </div>
            </div>
            <div class="sign-in-item">
                <fieldset>
                    <legend>Kayıt Ol</legend>
                    <div class="social-media-login">
                        <div class="item">
                            <button class="facebook"><img src="~/images/icons/facebook-icon.png" alt="">Facebook ile Kayıt Ol</button>
                            <button class="google"><img src="~/images/icons/google-icon .png" alt="">Google ile Kayıt O</button>
                        </div>
                    </div>
                    <div id="dvLoginFormMain">
                        <ol>
                            <li>
                                <input class="textbox" data-val="true" data-val-regex="Kullanıcı adını alanında geçersiz karakter kullandınız. Lütfen kontrol ediniz." data-val-regex-pattern=""^[\w-]+(\.[\w-]+)*@([a-z0-9-]+(\.[a-z0-9-]+)*?\.[a-z]{2,6}|(\d{1,3}\.){3}\d{1,3})(:\d{4})?$"" data-val-required="Lütfen Email Adresinizi Giriniz!" id="Email" name="UserName" placeholder="Kullanıcı Adı" type="text" value="" class="valid">
                                <span  class="field-validation-valid" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                                
                            </li>
                            <li>
                                <input class="textbox" data-val="true" data-val-regex="Email alanında geçersiz karakter kullandınız. Lütfen kontrol ediniz." data-val-regex-pattern=""^[\w-]+(\.[\w-]+)*@([a-z0-9-]+(\.[a-z0-9-]+)*?\.[a-z]{2,6}|(\d{1,3}\.){3}\d{1,3})(:\d{4})?$"" data-val-required="Lütfen Email Adresinizi Giriniz!" id="Email" name="Email" placeholder="Email Adresi" type="text" value="" class="valid">
                                <span  class="field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                            </li>
                            <li>
                                <input class="textbox" data-val="true" data-val-regex="Lütfen geçerli bir şifre giriniz." data-val-regex-pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*[\s.,;'^\-_]).{8,20}" data-val-required="Lütfen Şifrenizi Giriniz." id="Password" name="Password" placeholder="Parola" type="password" class="valid">
                                <span class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
								<span class="material-icons circular eye link icon" onclick="togglePassword()">remove_red_eye</span>
                            </li>
                            <li>
                                <input class="textbox" data-val="true" data-val-regex="Lütfen geçerli bir şifre giriniz." data-val-regex-pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*[\s.,;'^\-_]).{8,20}" data-val-required="Lütfen Şifrenizi Giriniz." id="PasswordAgain" name="PasswordAgain" placeholder="Parola Tekrar" type="password" class="valid">
                                <span class="field-validation-valid" data-valmsg-for="PasswordAgain" data-valmsg-replace="true"></span>
								<span class="material-icons circular eye link icon" onclick="togglePasswordAgain()">remove_red_eye</span>
                            </li>
                        </ol>
                        <input type="submit" id="btnLoginFormSave" value="Hesap Oluştur">
                    </div>
                    <div class="loginRegister">Zaten bir hesabın var mı? <strong><a target="_blank" href="#">Giriş Yap</a></strong></div>      
                </fieldset> 
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/flexslider/jquery.flexslider.js"></script>
    <script src="~/js/project.js"></script>
		<script>
		function togglePassword() {
		  var element = document.getElementById("Password");
		  element.type = element.type == "password" ? "text" : "password";
		}
        function togglePasswordAgain() {
		  var element = document.getElementById("PasswordAgain");
		  element.type = element.type == "password" ? "text" : "password";
		}
		</script>
         <div>
           @RenderBody()
         </div>

 
</body>
</html>
